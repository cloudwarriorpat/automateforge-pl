# --- KSeF API (ksef-auto-sender) ---
KSEF_API_URL=https://ksef-test.mf.gov.pl/api
KSEF_API_TOKEN=your-ksef-authorization-token
KSEF_NIP=0000000000

# --- BaseLinker (baselinker-inpost-tracker, daily-slack-digest) ---
BASELINKER_API_TOKEN=your-baselinker-api-token

# --- InPost (baselinker-inpost-tracker) ---
INPOST_API_TOKEN=your-inpost-api-token
INPOST_ORGANIZATION_ID=your-org-id

# --- PostgreSQL / Supabase (invoice-duplicate-detector, daily-slack-digest) ---
POSTGRES_HOST=db.your-project.supabase.co
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password

# --- Slack (all templates) ---
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C0000000000

# --- n8n Instance (daily-slack-digest) ---
N8N_INSTANCE_URL=https://n8n.your-domain.com
N8N_API_KEY=your-n8n-api-key

# --- Analytics (daily-slack-digest) ---
ANALYTICS_API_URL=https://analytics.your-domain.com/api
ANALYTICS_API_TOKEN=your-analytics-token

# --- REGON / KRS (lead-enrichment-pipeline) ---
REGON_API_KEY=your-regon-bir-api-key
KRS_API_URL=https://api-krs.ms.gov.pl
